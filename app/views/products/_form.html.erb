<div class="authform">

<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :nazov %>
    <%= f.input :mnozstvo %>
    <%= f.input :farba, :as => :select,
                :label => "Farba", :include_blank => false,
                :collection => [["Biela", 1], ["Červená", 2], ["Zelená", 3]] %>
    <%= f.input :velkost, :as => :select,
                :label => "Veľkosť", :include_blank => false,
                :collection => [["6", 1], ["6 1/5", 2], ["7", 3], ["7 1/5", 4]] %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
</div>